<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/small_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:scaleType="fitStart"
        android:src="@drawable/small_picture"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/small_picture"
        android:text="@string/lorem_ipsum_small"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/big_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/small_picture"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:src="@drawable/big_picture"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/big_picture"
        android:clickable="false"
        android:text="@string/lorem_ipsum" />
</RelativeLayout>
