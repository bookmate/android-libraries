<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookmate.libs.demo">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity
            android:name="com.bookmate.libs.demo.DemosActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bookmate.libs.demo.ImageViewerActivity_"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name="com.bookmate.libs.demo.FloatingToolbarActivity_"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name="com.bookmate.libs.demo.ReaderActivity_"
            android:label="@string/app_name" />

        <activity
            android:name=".PlaceholdersActivity_"
            android:label="@string/app_name" />
        <service
            android:name=".traits.bookmate.YotaReader_"
            android:exported="false" />
    </application>

</manifest>
